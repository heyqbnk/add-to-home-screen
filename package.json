    "eslint": "^8.57.0",
    "eslint-plugin-solid": "^0.14.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.2.0",
    "solid-devtools": "^0.30.1",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.11",
    "vite-plugin-solid": "^2.10.2",
